{
    "root": true,
    "extends": "eslint:recommended",
    "rules": {
        "quotes": [2, "single"],
        "linebreak-style": [2, "unix"],
        "semi": [2, "always"],
        "semi-spacing": [2, {
            "before": false,
            "after": true
        }],
        "no-console": 0,
        "no-var": 2,
        "prefer-const": 2
    },
    "parserOptions": {
        "sourceType": "module",
    },
    "env": {
        "es6": true,
        "node": true
    }
}
